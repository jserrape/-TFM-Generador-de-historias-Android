<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textView_titulo_carousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView_carousel_presentacion"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_below="@+id/textView_titulo_carousel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/com_facebook_button_icon_blue" />

        <TextView
            android:id="@+id/textView_texto_carousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_carousel_presentacion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20dp" />

    </RelativeLayout>
</RelativeLayout>