        -->

    <ImageView
        android:id="@+id/imageViewTituloHistoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewDescripcionHistoria"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/textViewDescripcionHistoria"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_above="@+id/buttonEmpezarHistoria"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="40dp"
        android:text="@string/ejemplo"
        android:textSize="17dp" />

    <Button
        android:id="@+id/buttonEmpezarHistoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="@string/empezar" />

</RelativeLayout>